###############################################
# Docker 用 .env サンプル（コピーして編集）
# 使い方: cp .env.docker.example .env.docker
###############################################

##### 必須（最小起動に必要）
DISCORD_BOT_TOKEN=
GEMINI_API_KEY=
OBSIDIAN_VAULT_PATH=/app/vault   # docker-compose で /app/vault をボリュームマウント

##### Discord（任意）
DISCORD_OWNER_ID=
DISCORD_GUILD_ID=

##### 環境/ログ/ポート
ENVIRONMENT=production           # personal / production / development
LOG_LEVEL=INFO                   # DEBUG/INFO/WARN/ERROR
LOG_FORMAT=json                  # json/text
PORT=8080                        # health サーバー用
SECRET_MANAGER_STRATEGY=env      # env/google（GCP Secret Manager を使わないなら env のまま）
SECRET_MANAGER_PROJECT_ID=
HEALTH_ENDPOINT_TOKEN=
HEALTH_CALLBACK_STATE=
ENCRYPTION_KEY=                  # 32 バイト (Base64 or raw) の Fernet key

##### 音声認識（どちらか一方）
GOOGLE_CLOUD_SPEECH_API_KEY=
GOOGLE_APPLICATION_CREDENTIALS=/app/.config/gcp-credentials.json  # サービスアカウント JSON を /app/.config にマウント
GOOGLE_CLOUD_SPEECH_CREDENTIALS=/app/.config/google-cloud-speech.json  # Speech-to-Text 用 JSON

##### Google Calendar（任意機能）
GOOGLE_CALENDAR_ID=primary
GOOGLE_CALENDAR_CLIENT_ID=
GOOGLE_CALENDAR_CLIENT_SECRET=
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:8080/callback
GOOGLE_CALENDAR_ACCESS_TOKEN=
GOOGLE_CALENDAR_REFRESH_TOKEN=
GOOGLE_CALENDAR_SERVICE_ACCOUNT=
GOOGLE_CALENDAR_AUTO_DISCOVER=false
GOOGLE_CALENDAR_SYNC_SELECTED_ONLY=false
GOOGLE_CALENDAR_ADDITIONAL_IDS=

##### Garmin（任意機能）
GARMIN_EMAIL=
GARMIN_PASSWORD=
GARMIN_USERNAME=
GARMIN_CACHE_DIR=/app/.cache/garmin
GARMIN_CACHE_HOURS=24

##### GitHub バックアップ（任意機能）
GITHUB_TOKEN=
OBSIDIAN_BACKUP_REPO=https://github.com/yourusername/obsidian-vault-backup.git
OBSIDIAN_BACKUP_BRANCH=main
GIT_USER_NAME=Personal MindBridge
GIT_USER_EMAIL=mindbridge@personal.local

##### コスト/クォータ管理（任意）
GEMINI_API_DAILY_LIMIT=1500
GEMINI_API_MINUTE_LIMIT=15
SPEECH_API_MONTHLY_LIMIT_MINUTES=60
ENABLE_USAGE_ALERTS=true
USAGE_ALERT_THRESHOLD=0.8
ENABLE_QUOTA_PROTECTION=true
ENABLE_ACCESS_LOGGING=true
ACCESS_LOG_ROTATION_SIZE_MB=5
ACCESS_LOG_ROTATION_BACKUPS=5

##### モック/開発オプション（任意）
ENABLE_MOCK_MODE=false
MOCK_DISCORD_ENABLED=false
MOCK_GEMINI_ENABLED=false
MOCK_GARMIN_ENABLED=false
MOCK_SPEECH_ENABLED=false

##### AI モデル設定
MODEL_NAME=models/gemini-2.5-flash
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=1024

##### 注意
# このファイルは .gitignore によりコミットされません。
# ボリューム: vault/logs/backups/.cache/.config は docker-compose.yml でマウントされます。
